int c1=0;
                int c2=0;
            if(a[i][j]==1)
            {
                c2++;
            }
            if(c2>c1)
            {
                c2=c1;
                c1=c2;
            }
            int max_c1=c1;
            int max_c2=c2;
            if(max_c1>c2)
            {
                System.out.println(c1+1);
            }
            else
            {
                System.out.println(c2+1);
            }